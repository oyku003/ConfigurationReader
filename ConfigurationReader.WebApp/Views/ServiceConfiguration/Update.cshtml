@using ConfigurationReader.Shared.Models.Dtos
@model ServiceConfigurationDto

<div class="row">

    <div class=col-md-6>

        <form asp-action="Update" method="post" asp-controller="ServiceConfiguration">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Type"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Value"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationName"></label>
                <input asp-for="ApplicationName" class="form-control" />
                <span asp-validation-for="ApplicationName" class="text-danger"></span>
            </div>


            <div class="form-group">

                <input type="submit" value="Update" class="btn-primary" />

            </div>
        </form>



    </div>


</div>